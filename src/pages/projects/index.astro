---
import Layout from '../../layouts/Layout.astro';
---

<Layout>
	<section class="py-5">
		<div class="container">
			<h1 class="mb-4 fw-bold text-center">Projects</h1>
			<div class="row g-4">
				<!-- Project Card 1 -->
				<div class="col-md-4">
					<div class="card shadow-sm h-100">
						<img src="/excel.png" class="card-img-top" alt="Project 1">
						<div class="card-body">
							<h5 class="card-title">Video Game Sales</h5>
							<p class="card-text">Interactive Microsoft Excel dashboard analyzing video games sales performance.</p>
							<a href="/projects/excel-video-games" class="btn btn-primary btn-sm">View Project</a>
						</div>
					</div>
				</div>

				<!-- Project Card 2 -->
				<div class="col-md-4">
					<div class="card shadow-sm h-100">
						<img src="/images/project2.jpg" class="card-img-top" alt="Project 2">
						<div class="card-body">
							<h5 class="card-title">Customer Segmentation</h5>
							<p class="card-text">Data analysis using Excel pivot tables to identify customer purchase behavior.</p>
							<a href="#" class="btn btn-primary btn-sm">View Project</a>
						</div>
					</div>
				</div>

				<!-- Project Card 3 -->
				<div class="col-md-4">
					<div class="card shadow-sm h-100">
						<img src="/images/project3.jpg" class="card-img-top" alt="Project 3">
						<div class="card-body">
							<h5 class="card-title">Financial Report Automation</h5>
							<p class="card-text">Automated Excel reporting system reducing monthly reporting time by 40%.</p>
							<a href="#" class="btn btn-primary btn-sm">View Project</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</Layout>
